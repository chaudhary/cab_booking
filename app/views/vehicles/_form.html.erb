<%= form_with(model: vehicle) do |form| %>
  <% if vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
        <% vehicle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :reg_no %>
    <%= form.text_field :reg_no, disabled: vehicle.persisted? %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Vehicle::ALL_STATUSES, include_blank: false %>
  </div>

  <div class="field">
    <%= form.label :current_city_name %>
    <%= form.text_field :current_city_name %>
  </div>

  <div class="field">
    <%= form.label :driver_name %>
    <%= form.text_field :driver_name %>
  </div>

  <div class="field">
    <%= form.label :driver_email %>
    <%= form.text_field :driver_email %>
  </div>

  <div class="field">
    <%= form.label :driver_mobile %>
    <%= form.text_field :driver_mobile %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
