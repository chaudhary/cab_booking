<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Reg no</th>
      <th>Status</th>
      <th>Current city</th>
      <th>Driver name</th>
      <th>Driver email</th>
      <th>Driver mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.reg_no %></td>
        <td><%= vehicle.status %></td>
        <td><%= vehicle.current_city.name %></td>
        <td><%= vehicle.driver_name %></td>
        <td><%= vehicle.driver_email %></td>
        <td><%= vehicle.driver_mobile %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

